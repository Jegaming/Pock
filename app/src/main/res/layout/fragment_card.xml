<?xml version="1.0" encoding="utf-8"?>

<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#dedede">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@drawable/card_linearlayout_divider"
    android:orientation="vertical"
    android:showDividers="middle">

    <!--顶部卡片-->
    <LinearLayout
      style="@style/CardItemLayout"
      android:layout_marginTop="20dp"
      android:layout_marginBottom="20dp"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <FrameLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
          android:layout_width="135dp"
          android:layout_height="185dp"
          android:src="#fefefe"/>

        <ImageView
          android:layout_width="125dp"
          android:layout_height="175dp"
          android:layout_gravity="center"
          android:scaleType="centerCrop"
          android:src="@drawable/yicunxiang"/>
      </FrameLayout>

      <TextView
        android:background="@color/colorGrayDivider"
        android:layout_width="1dp"
        android:layout_height="match_parent"/>

      <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout style="@style/CardItemLayout">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#818080"
            android:text="姓名："/>

          <TextView
            style="@style/CardItemRight"
            android:text="XXX"/>
        </LinearLayout>
        <LinearLayout style="@style/CardItemLayout">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#818080"
            android:text="学号："/>

          <TextView
            style="@style/CardItemRight"
            android:text="05192059"/>
        </LinearLayout>
        <LinearLayout style="@style/CardItemLayout">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#818080"
            android:text="学校："/>

          <TextView
            style="@style/CardItemRight"
            android:text="西安邮电大学"/>
        </LinearLayout>
      </LinearLayout>
    </LinearLayout>

    <!--基本资料-->
    <LinearLayout style="@style/CardItemLayout">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#505050"
        android:textSize="20sp"
        android:text="基本资料"/>
    </LinearLayout>

    <LinearLayout style="@style/CardItemLayout">

      <TextView
        style="@style/CardItemLeft"
        android:text="性别："/>

      <TextView
        style="@style/CardItemRight"
        android:text="女"/>
    </LinearLayout>

    <LinearLayout style="@style/CardItemLayout">

      <TextView
        style="@style/CardItemLeft"
        android:text="身份证号："/>

      <TextView
        style="@style/CardItemRight"
        android:text="610429xxxxxxxx2135"/>
    </LinearLayout>

    <LinearLayout style="@style/CardItemLayout">

      <TextView
        style="@style/CardItemLeft"
        android:text="联系电话："/>

      <TextView
        style="@style/CardItemRight"
        android:text="137xxxx5268"/>
    </LinearLayout>

    <LinearLayout style="@style/CardItemLayout">

      <TextView
        style="@style/CardItemLeft"
        android:text="电子邮箱："/>

      <TextView
        style="@style/CardItemRight"
        android:text="36554892@qq.com"/>
    </LinearLayout>

    <LinearLayout style="@style/CardItemLayout">

      <TextView
        style="@style/CardItemLeft"
        android:text="家庭住址："/>

      <TextView
        style="@style/CardItemRight"
        android:text="西安市灞桥区"/>
    </LinearLayout>

    <LinearLayout style="@style/CardItemLayout"
      android:layout_height="wrap_content"
      android:paddingRight="10dp"
      android:orientation="vertical">

      <TextView
        style="@style/CardItemLeft"
        android:text="火车票："/>

      <RelativeLayout
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        
        <LinearLayout
          android:orientation="horizontal"
          android:gravity="center_vertical"
          android:layout_width="wrap_content"
          android:layout_height="match_parent">

          <TextView
            style="@style/CardItemRight"
            android:text="乌鲁木齐"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

          <TextView
            style="@style/CardItemRight"
            android:text="——"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

          <TextView
            style="@style/CardItemRight"
            android:text="乌鲁木齐"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>
        
        <ImageView
          android:layout_alignParentRight="true"
          android:src="@drawable/test_qrcode"
          android:layout_width="150dp"
          android:layout_height="150dp"/>
      </RelativeLayout>


    </LinearLayout>
  

    
  </LinearLayout>
</ScrollView>